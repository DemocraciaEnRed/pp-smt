.admin-votes
    .pagination
        display: flex;
        justify-content: center
    .tags-modal
        position fixed
        top: 0
        left: 0
        width: 100%
        height 100%
        display flex
        justify-content center
        align-items center
        z-index 9901
        .content
            background: white
            z-index: 9999999
            padding: 20px
            border-radius: 3px
            box-shadow: 0 2px 4px 1px #555
            max-width 700px
            .tag-label
                font-weight: bold
            .forum-tag-search
                margin: 5px 0 20px
            button
                float: right